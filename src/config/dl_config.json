{
  "model_name": "dl_sentiment",
  "model_type": "distilbert",
  "pretrained_model": "distilbert-base-uncased",
  "training": {
    "batch_size": 16,
    "learning_rate": 2e-5,
    "num_epochs": 4,
    "warmup_steps": 500,
    "weight_decay": 0.01,
    "gradient_accumulation_steps": 1,
    "max_grad_norm": 1.0
  },
  "model_params": {
    "num_labels": 3,
    "max_length": 128,
    "dropout": 0.1
  },
  "optimizer": {
    "type": "adamw",
    "eps": 1e-8
  },
  "scheduler": {
    "type": "linear",
    "num_warmup_steps": 0
  },
  "early_stopping": {
    "patience": 2,
    "min_delta": 0.001
  },
  "paths": {
    "model_dir": "saved_models/dl",
    "checkpoint_dir": "saved_models/dl/checkpoints",
    "best_model_path": "saved_models/dl/best_model"
  }
}